print ("vous voulez vous allé: ")
reponse = ["à droite","tout droit" , "à gauche"]


def vérification (reponse):
    for i in reponse:
        print (i)
    rep = input("votre choix: ")
    if rep == "exit":
        print("Vous sortez du jeux")
        exit   
    for i in range(len(reponse)):
        if i+1 == rep:
            print("vous decidez de  " + reponse[i+1])
        else: 
            rep = print("entrez une valeur correcte: ")
            vérification (reponse)
    return i+1
        
            

vérification (reponse)
